pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'repo2/repo2:latest'
        DOCKERHUB_CREDENTIALS = 'd6k1281g' // Jenkins credentials ID for DockerHub
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from GitHub using HTTP URL
                git url: 'https://github.com/your-org/your-repo.git', branch: 'main'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t $DOCKER_IMAGE .'
                }
            }
        }
        stage('Scan Docker Image with Trivy') {
            steps {
                script {
                    // Download Trivy if not present
                    sh '''
                        if ! command -v trivy > /dev/null; then
                            wget -qO- https://github.com/aquasecurity/trivy/releases/latest/download/trivy_0.50.2_Linux-64bit.tar.gz | tar zxv -C /usr/local/bin trivy
                        fi
                        trivy image --exit-code 1 --severity HIGH,CRITICAL $repo2
                    '''
                }
            }
        }
        stage('Push to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: env.DOCKERHUB_CREDENTIALS, usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PASS')]) {
                    sh '''
                        echo $DOCKERHUB_PASS | docker login -u $DOCKERHUB_USER --password-stdin
                        docker push $DOCKER_IMAGE
                    '''
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}